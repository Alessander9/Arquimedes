    <!-- Incluir GSAP para animaciones -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Selecciona todas las imágenes del carrusel
            const carouselItems = document.querySelectorAll(".carousel-item");

            // Animación de entrada inicial para cada imagen del carrusel
            gsap.fromTo(carouselItems,
                { opacity: 0, scale: 1.1 },
                { opacity: 1, scale: 1, duration: 1, ease: "power2.out", stagger: 0.2 }
            );

            // Configura la animación de transición entre imágenes del carrusel
            $("#carouselExample").on("slide.bs.carousel", function () {
                const activeItem = document.querySelector(".carousel-item.active");
                gsap.fromTo(activeItem,
                    { opacity: 0, scale: 1.1 },
                    { opacity: 1, scale: 1, duration: 0.8, ease: "power2.out" }
                );
            });

            // Animación en los elementos de la barra de navegación al pasar el mouse
            const navItems = document.querySelectorAll(".nav-link, .navbar-brand");
            navItems.forEach(item => {
                item.addEventListener("mouseenter", () => {
                    gsap.to(item, { scale: 1.1, duration: 0.3, color: "rgba(241, 196, 15, 0.8)" });
                });
                item.addEventListener("mouseleave", () => {
                    gsap.to(item, { scale: 1, duration: 0.3, color: "#f1c40f" });
                });
            });
        });
    </script>


