        /* Estilos generales */
        body {
            background-color: #40515E;
            color: #f1c40f;
            font-family: 'Roboto', sans-serif;
        }

        .navbar, .footer {
            background-color: #000;
            border-bottom: 2px solid #f1c40f;
            width: 100vw;
            position: relative;
            left: 50%;
