@model Estudiante

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Estudiante</title>
    <style>
        body {
            background-image: linear-gradient(to right, #5e7d82, #3c6c7c, #185a79, #004774, #00326a, #002863, #031d5b, #081252, #08114f, #08104d, #070e4a, #070d48);
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container mx-auto p-8 bg-white shadow-lg rounded-lg max-w-xl">
        <h1 class="text-2xl font-bold text-red-500 mb-4 text-center">Eliminar Estudiante</h1>
        <p class="text-gray-700 text-center mb-6">¿Estás seguro de que deseas eliminar este estudiante? Esta acción no se puede deshacer.</p>

        <div class="mt-4">
            <dl class="space-y-4">
                <div>
                    <dt class="font-semibold text-gray-800">Código:</dt>
                    <dd class="text-gray-600">@Model.CodEstudiante</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-800">Nombre:</dt>
                    <dd class="text-gray-600">@Model.NombreEstudiante @Model.ApellidoEstudiante</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-800">Edad:</dt>
                    <dd class="text-gray-600">@Model.EdadEstudiante</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-800">Año:</dt>
                    <dd class="text-gray-600">@Model.AnioEstudiante</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-800">Sección:</dt>
                    <dd class="text-gray-600">@Model.SeccionEstudiante</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-800">Teléfono:</dt>
                    <dd class="text-gray-600">@Model.Telefono</dd>
                </div>
            </dl>
        </div>

        <div class="mt-6 flex justify-center space-x-4">
            @using (Html.BeginForm("EliminarEstudiantes", "Estudiante", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="codEstudiante" value="@Model.CodEstudiante" />
                <button type="button" class="bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-600" onclick="confirmDelete()">
                    Eliminar
                </button>
            }
            @Html.ActionLink("Cancelar", "ListarEstudiantes", null, new { @class = "bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded hover:bg-gray-400" })
        </div>
    </div>

    <script>
        function confirmDelete() {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "No podrás deshacer esta acción.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#EF6C00',
                cancelButtonColor: '#091C47',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.querySelector('form').submit();
                }
            });
        }
    </script>
</body>
</html>
