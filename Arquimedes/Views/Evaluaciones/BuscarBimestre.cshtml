@{
    ViewBag.Title = "Buscar Bimestre";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-image: linear-gradient(to right, #5e7d82, #3c6c7c, #185a79, #004774, #00326a, #002863, #031d5b, #081252, #08114f, #08104d, #070e4a, #070d48);
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- CDN de Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-search text-blue-500 mr-2"></i> @ViewBag.Title
        </h2>

        @using (Html.BeginForm("BuscarBimestre", "Evaluaciones", FormMethod.Post))
        {
            <div class="space-y-4">
                <!-- Campo Código -->
                <div>
                    <label for="codigo" class="block text-sm font-medium text-gray-700">Código:</label>
                    <div class="relative">
                        <input type="text" name="codigo" class="mt-1 block w-full px-10 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Ingrese código de estudiante o académico" />
                        <i class="fas fa-user absolute top-2/4 left-3 transform -translate-y-2/4 text-gray-400"></i>
                    </div>
                </div>

                <!-- Campo Tipo -->
                <div>
                    <label for="tipo" class="block text-sm font-medium text-gray-700">Tipo:</label>
                    <div class="relative">
                        <select name="tipo" class="mt-1 block w-full px-10 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="Estudiante">Estudiante</option>
                            <option value="Academico">Académico</option>
                        </select>
                        <i class="fas fa-list-alt absolute top-2/4 left-3 transform -translate-y-2/4 text-gray-400"></i>
                    </div>
                </div>

                <!-- Botón Buscar -->
                <div>
                    <button type="submit" class="flex items-center justify-center px-4 py-2 bg-blue-500 text-white font-medium rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 w-full">
                        <i class="fas fa-search mr-2"></i> Buscar
                    </button>
                </div>

                <!-- Botón Volver con Gradiente Rojo a Morado -->
                <div class="mt-4 flex justify-end space-x-2">

                    <a href="@Url.Action("vistaAdministrador", "Administrador")" class="px-4 py-2 bg-gradient-to-r from-red-500 to-purple-600 text-white rounded-lg shadow-md hover:from-red-600 hover:to-purple-700 flex items-center gap-2 transition-colors duration-300">
                        <span class="material-icons">arrow_back</span> Salir al menú
                    </a>
                </div>
            </div>
        }

        <!-- Mensaje de Error -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mt-4 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <p>@TempData["ErrorMessage"]</p>
            </div>
        }
    </div>
</body>
</html>
