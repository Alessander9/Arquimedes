@model List<Arquimedes.Models.AcumuladoBimestre>

@{
    ViewBag.Title = "Consultar Acumulado por Código";
}

<h2>Consultar Acumulado por Código</h2>

<div class="form-horizontal">
    @using (Html.BeginForm("ConsultarAcumuladoPorCodigo", "Evaluaciones", FormMethod.Get))
    {
        <div class="form-group">
            <label for="codigo" class="control-label col-md-2">Código:</label>
            <div class="col-md-4">
                <input type="text" id="codigo" name="codigo" class="form-control" placeholder="Ingrese el código">
            </div>
        </div>

        <div class="form-group">
            <label for="tipo" class="control-label col-md-2">Tipo:</label>
            <div class="col-md-4">
                <select id="tipo" name="tipo" class="form-control">
                    <option value="">Seleccione un tipo</option>
                    <option value="Estudiante">Estudiante</option>
                    <option value="Academico">Académico</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    }
</div>

@if (Model != null && Model.Any())
{
    <h3>Resultados:</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id Acumulado</th>
                <th>Curso</th>
                <th>Bimestre</th>
                <th>T1</th>
                <th>T2</th>
                <th>T3</th>
                <th>T4</th>
                <th>T5</th>
                <th>Promedio Letra</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdAcumulado</td>
                    <td>@item.IdCurso</td>
                    <td>@item.Bimestre</td>
                    <td>@item.T1</td>
                    <td>@item.T2</td>
                    <td>@item.T3</td>
                    <td>@item.T4</td>
                    <td>@item.T5</td>
                    <td>@item.PromedioLetra</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <div class="alert alert-warning">No se encontraron acumulados para el código proporcionado.</div>
}
