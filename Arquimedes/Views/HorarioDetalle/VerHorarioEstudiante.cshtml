

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horario del Estudiante</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-blue-900 mb-6">Horario del Estudiante</h1>

        <table class="min-w-full border border-gray-200">
            <thead class="bg-blue-800 text-white">
                <tr>
                    <th class="px-4 py-2 text-left">Código Horario</th>
                    <th class="px-4 py-2 text-left">Curso</th>
                    <th class="px-4 py-2 text-left">Día</th>
                    <th class="px-4 py-2 text-left">Hora</th>
                    <th class="px-4 py-2 text-left">Nivel</th>
                    <th class="px-4 py-2 text-left">Profesor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-blue-100">
                        <td class="px-4 py-2">@item.CodigoHorario</td>
                        <td class="px-4 py-2">@item.NombreCurso</td>
                        <td class="px-4 py-2">@item.Dia</td>
                        <td class="px-4 py-2">@item.Hora</td>
                        <td class="px-4 py-2">@item.Nivel</td>
                        <td class="px-4 py-2">@item.Profesor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
