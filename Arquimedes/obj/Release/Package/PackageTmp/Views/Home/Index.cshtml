    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const sliderContainer = document.querySelector('.slider-container');
        const thumbnails = sliderContainer.querySelector('.thumbnails');

        // Variable para rastrear el estado de las miniaturas
        let thumbnailsVisible = false;

        // Función para alternar la visibilidad de las miniaturas
        function toggleThumbnails() {
            if (thumbnailsVisible) {
                thumbnails.style.opacity = '0';
                thumbnails.style.visibility = 'hidden';
                thumbnails.style.transform = 'translateX(-50%) translateY(20px)';
                thumbnailsVisible = false;
            } else {
                thumbnails.style.opacity = '1';
                thumbnails.style.visibility = 'visible';
                thumbnails.style.transform = 'translateX(-50%) translateY(0)';
                thumbnailsVisible = true;
            }
        }

        // Añadir evento de clic/touch al slider-container
        sliderContainer.addEventListener('click', toggleThumbnails);
        sliderContainer.addEventListener('touchstart', toggleThumbnails);
    });
