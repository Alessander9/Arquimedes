    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const newsSliderWrapper = document.getElementById('slider-ultimas-noticias');
            const sliderContainer = newsSliderWrapper.querySelector('.slider-contenedor');
            const cards = newsSliderWrapper.querySelectorAll('.glass-card');
            const prevButton = newsSliderWrapper.querySelector('.slider-control.prev');
            const nextButton = newsSliderWrapper.querySelector('.slider-control.next');
            const cardWidth = cards[0].offsetWidth + 20; // Ancho de la tarjeta más margen
            let currentIndex = 0;

            // Clona las primeras y últimas tarjetas para el efecto infinito
            const firstCardsClone = Array.from(cards).slice(0, 3).map(card => card.cloneNode(true));
            const lastCardsClone = Array.from(cards).slice(-3).map(card => card.cloneNode(true));
            firstCardsClone.forEach(clone => sliderContainer.appendChild(clone));
            lastCardsClone.reverse().forEach(clone => sliderContainer.insertBefore(clone, sliderContainer.firstChild));

            // Ajusta la posición inicial del contenedor
            sliderContainer.style.transform = `translateX(-${3 * cardWidth}px)`;

            // Función para mover el slider
            function updateSlider() {
                sliderContainer.style.transition = 'transform 0.5s ease';
                sliderContainer.style.transform = `translateX(-${(currentIndex + 3) * cardWidth}px)`;

                // Resetea el índice para el efecto infinito
                sliderContainer.addEventListener('transitionend', () => {
                    if (currentIndex < 0) {
                        currentIndex = cards.length - 1;
                        sliderContainer.style.transition = 'none';
                        sliderContainer.style.transform = `translateX(-${(currentIndex + 3) * cardWidth}px)`;
                    } else if (currentIndex >= cards.length) {
                        currentIndex = 0;
                        sliderContainer.style.transition = 'none';
                        sliderContainer.style.transform = `translateX(-${(currentIndex + 3) * cardWidth}px)`;
                    }
                });
            }

            // Botón Siguiente
            nextButton.addEventListener('click', () => {
                currentIndex++;
                updateSlider();
            });

            // Botón Anterior
            prevButton.addEventListener('click', () => {
                currentIndex--;
                updateSlider();
            });

            // Autoplay
            let autoPlay = setInterval(() => {
                currentIndex++;
                updateSlider();
            }, 3000);

            // Pausa en hover
            newsSliderWrapper.addEventListener('mouseenter', () => clearInterval(autoPlay));
            newsSliderWrapper.addEventListener('mouseleave', () => {
                autoPlay = setInterval(() => {
                    currentIndex++;
                    updateSlider();
                }, 3000);
            });
        });
    </script>

