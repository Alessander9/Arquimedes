            /* Ocultar las miniaturas por defecto */
            .slider-container .thumbnail-item {
                opacity: 0;
                visibility:initial;
                transform: translateY(20px);
                transition: opacity 3.0s ease, transform 3.0s ease;
            }

            .slider-container .thumbnail-item:nth-child(1) {
                transition-delay: 3.3s;
            }

            .slider-container .thumbnail-item:nth-child(2) {
                transition-delay: 3.9s;
            }


            .slider-container .thumbnail-item:nth-child(3) {
                transition-delay: 3.6s;
            }

            .slider-container .thumbnails {
                position: absolute;
                bottom: 10px; /* Ajusta según sea necesario */
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                gap: 10px; /* Espacio entre miniaturas */
                z-index: 10; /* Asegura que las miniaturas estén por encima de otros elementos */
            }

            /* Mostrar las miniaturas al pasar el cursor sobre el slider */
            .slider-container:hover .thumbnail-item {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

                /* Aplicar retrasos individuales a cada miniatura */
                .slider-container:hover .thumbnail-item:nth-child(1) {
                    transition-delay: 0.3s;
