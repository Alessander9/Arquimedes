        .glass-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            text-align: center;
            width: 300px;
            transition: transform 0.4s ease, box-shadow 0.3s ease;
            flex-shrink: 0;
        }

        .zoom {
            transform: scale(1.1);
        }

        .glass-card.zoom {
            transform: scale3d(1.2);
            z-index: 5; /* Asegura que la tarjeta escalada esté por encima de otras */
        }

        .glass-card img {
            width: 100%;
            height: auto;
            transition: transform 0.3s ease; /* Añade una transición suave */
        }

        .glass-card h3 {
            font-size: 1.5rem;
            margin: 10px 0;
            color: white;
        }

        .glass-card p {
            padding: 10px;
            color: white;
        }

        .btn-card {
            display: inline-block;
            margin: 15px 0;
            padding: 10px 20px;
            color: var(--texto-principal-ej1);
            background-color: var(--botones-acento-ej1);
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .btn-card:hover {
                background-color: var(--fondo-principal-ej1);
                color: var(--texto-principal-ej1);
            }

