        document.addEventListener('DOMContentLoaded', () => {
            const sliderItems = document.querySelectorAll('.slider-container .slide-item');
            const nextArrow = document.getElementById('arrow-next');
            const prevArrow = document.getElementById('arrow-prev');
            const sliderThumbnails = document.querySelectorAll('.slider-container .thumbnail-item');
            let currentSliderIndex = 0;
            const totalItems = sliderItems.length;

            function showSliderSlide(index) {
                if (index >= totalItems) {
                    currentSliderIndex = 0;
                } else if (index < 0) {
                    currentSliderIndex = totalItems - 1;
                } else {
                    currentSliderIndex = index;
                }

                sliderItems.forEach((slide, i) => {
                    slide.classList.toggle('active', i === currentSliderIndex);
                });

                sliderThumbnails.forEach((thumbnail, i) => {
                    thumbnail.classList.toggle('active', i === currentSliderIndex);
                });

                const sliderSlidesContainer = document.querySelector('.slider-container .slides');
                sliderSlidesContainer.style.transform = `translateX(-${currentSliderIndex * 100}%)`;
                sliderSlidesContainer.style.transition = 'transform 0.5s ease-in-out';
            }

            // Flecha siguiente
            nextArrow.addEventListener('click', () => {
                showSliderSlide(currentSliderIndex + 1);
            });

            // Flecha anterior
            prevArrow.addEventListener('click', () => {
                showSliderSlide(currentSliderIndex - 1);
            });

            // Miniaturas
            sliderThumbnails.forEach((thumbnail, index) => {
                thumbnail.addEventListener('click', () => {
                    showSliderSlide(index);
                });
            });

            // Inicializa mostrando la primera diapositiva
            showSliderSlide(0);

